{
    "name": "@creative-introvert/tons-of-tests",
    "version": "0.4.1",
    "type": "module",
    "license": "MIT",
    "sideEffects": [],
    "tags": [
        "typescript",
        "performance",
        "confusion-matrix",
        "test",
        "test-runner",
        "coverage"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/creative-introvert/tons-of-tests.git"
    },
    "publishConfig": {
        "access": "public",
        "directory": "dist",
        "provenance": true
    },
    "scripts": {
        "build": "pnpm build-cjs && pnpm build-annotate && tsx src/pack.ts",
        "build-esm": "tsc --build tsconfig.build.json",
        "build-cjs": "babel build/esm --out-dir build/cjs",
        "build-annotate": "babel build --plugins annotate-pure-calls --out-dir build",
        "test:watch": "vitest --passWithNoTests",
        "test": "vitest run --passWithNoTests",
        "clean": "rm -rf build dist .tsbuildinfo"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.1",
        "@babel/core": "^7.24.4",
        "@babel/plugin-transform-export-namespace-from": "^7.24.1",
        "@babel/plugin-transform-modules-commonjs": "^7.24.1",
        "@creative-introvert/eslint-config": "^0.3.2",
        "@creative-introvert/prettier-config": "^0.2.0",
        "@types/diff-match-patch": "^1.0.36",
        "babel-plugin-annotate-pure-calls": "^0.4.0",
        "type-fest": "^4.18.2"
    },
    "dependencies": {
        "@effect/platform": "^0.53.8",
        "@effect/platform-node": "^0.49.8",
        "@effect/schema": "^0.67.5",
        "@effect/sql": "^0.2.10",
        "@effect/sql-sqlite-node": "^0.2.11",
        "ansi-colors": "^4.1.3",
        "chalk": "4",
        "diff-match-patch": "^1.0.5",
        "effect": "3.1.5"
    }
}
